<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VSUoW.Views.EnterNav1">
    <ContentPage.Content>
        <StackLayout>
            <ContentView VerticalOptions="FillAndExpand">
                <Image x:Name="InfoImg" Source="vsuwt.jpg" VerticalOptions="Center" HeightRequest="340"/>
            </ContentView>

            <Label>
                <Label.FormattedText>
                    <FormattedString>
                        <FormattedString.Spans>
                            <Span Text="Добро пожаловать в Навигатор! " FontSize="19"/>
                <Span Text="Чтобы начать работу, нажмите кнопку" FontSize="19"  />
                            <Span Text="Открыть навигатор" FontAttributes="Bold" FontSize="19" />
                            <Span Text="." FontSize="19"/>
                        </FormattedString.Spans>
                    </FormattedString>
                </Label.FormattedText>
            </Label>

            <Button Clicked="Button_Clicked" Text="Открыть навигатор" BackgroundColor="#2196F3" TextColor="White" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>