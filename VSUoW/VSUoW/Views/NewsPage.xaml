<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="VSUoW.Views.NewsPage"
             Title="Новости">
    <ContentPage.Content>
        <Grid Padding="10">
           
            <BoxView Color="Red" Grid.Column="0" Grid.Row="0"/>
            <BoxView Color="Blue" Grid.Column="1" Grid.Row="0"/>
            <BoxView Color="Yellow" Grid.Column="0" Grid.Row="1"/>
            <BoxView Color="Green" Grid.Column="1" Grid.Row="1"/>
            <BoxView Color="Black" Grid.Column="1" Grid.Row="2"/>
            <BoxView Color="Orange" Grid.Column="0" Grid.Row="2"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>